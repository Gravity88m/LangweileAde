<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_p"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/lbl_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btn_made"
        android:layout_alignRight="@id/txt_moneyLeft"
        android:layout_below="@id/btn_made"
        android:layout_marginTop="185dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/str_weatherDesc"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size_p" />

    <TextView
        android:id="@+id/lbl_moneyLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btn_made"
        android:layout_below="@id/btn_made"
        android:layout_marginTop="150dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:text="@string/str_moneyLeftDesc"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size_p" />

    <Button
        android:id="@+id/btn_made"
        style="@style/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_showActivity"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txt_moneyLeft"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="@string/str_requestActivity"
        android:textSize="@dimen/button_main_size_p" />

    <EditText
        android:id="@+id/txt_moneyLeft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_moneyLeft"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/lbl_moneyLeft"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="@dimen/button_text_size_p" />

    <Button
        android:id="@+id/btn_showActivity"
        style="@style/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_made"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="@string/str_showActivity"
        android:textSize="@dimen/button_text_size_p" />

    <Button
        android:id="@+id/addActivity"
        style="@style/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_showActivity"
        android:layout_below="@+id/btn_showActivity"
        android:layout_marginTop="5dp"
        android:gravity="left|center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="@string/str_addActivity"
        android:textSize="@dimen/button_text_size_p" />

    <ImageView
        android:id="@+id/img_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lbl_weather"
        android:layout_alignLeft="@+id/txt_moneyLeft"
        android:layout_alignRight="@id/txt_moneyLeft"
        android:layout_alignTop="@+id/lbl_weather"
        android:layout_marginLeft="37dp"
        android:contentDescription="@string/str_miniWeather" />

    <TextView
        android:id="@+id/txt_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_weather"
        android:layout_alignLeft="@+id/txt_moneyLeft"
        android:layout_alignRight="@id/txt_moneyLeft"
        android:layout_alignTop="@id/lbl_weather"
        android:layout_marginRight="40dp"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size_p" />

</RelativeLayout>